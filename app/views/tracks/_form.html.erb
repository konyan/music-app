<div class="ibox-content">
  <%= form_for @track, :html=>{:class => "form-horizontal" ,:multipart => true} do |f| %>
    <div class="form-group"><label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <%= f.text_field :name, class:"form-control"%>
        </div>
    </div>
    <div class="form-group"><label class="col-sm-2 control-label">Track Length</label>
        <div class="col-sm-10">
          <%= f.number_field :length, class:"form-control" %>
        </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Select Artists</label>
      <div class="col-sm-10">
          <%= f.collection_select(:artist_id,@artists, :id, :name,class: "form-control m-b") %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Select Category</label>
      <div class="col-sm-10">
          <%= f.collection_select(:category_id,@categories, :id, :name,class: "form-control m-b") %>
      </div>
    </div>
    <div class="form-group"><label class="col-sm-2 control-label">Subtitle Upload</label>
        <div class="col-sm-10">
          <%= f.file_field :translate_text, class:"form-control" %>
        </div>
    </div>
    <div class="form-group"><label class="col-sm-2 control-label">Track Upload</label>
        <div class="col-sm-10">
          <%= f.file_field :track_url, class:"form-control" %>
        </div>
    </div>


    <div class="form-group"><label class="col-sm-2 control-label">Track Description</label>
        <div class="col-sm-10">
          <%= f.text_area :description, class:"form-control summernote"%>
        </div>
    </div>

    <div class="hr-line-dashed"></div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            <%= link_to "Cancel", tracks_path, class: "btn btn-white"%>
            <%= f.submit(@track.new_record? ? "Create Track" : "Edit Track", class: "btn btn-primary")%>
        </div>
    </div>
  <% end %>
</div>

<% content_for :javascript do %>
<script type="text/javascript">


$(function() {
    $('.summernote').summernote();
});

</script>
<% end %>
