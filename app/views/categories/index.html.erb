<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
        <h2>Category

        </h2>

        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'index' %>">Home</a>
        </li>
        <li class="active">
            <strong>Category List</strong>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Category List</h5>
                  <div class="ibox-tools">
                    <%= link_to "Create", new_category_path, class:"btn btn-info btn-xs"%>
                  </div>
              </div>
              <div class="ibox-content">
                  <table class="table">
                      <thead>
                      <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>Tracks Count</th>
                          <th>Action</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% @categories.each do |category|%>
                        <tr>
                            <td><%= category.id%></td>
                            <td><%= category.name%></td>
                            <td><%= category.tracks.count%></td>
                            <td>
                              <%= link_to "show", category_path(category), class:"btn btn-primary btn-xs" %>
                              <%= link_to "Edit", edit_category_path(category), class:"btn btn-info btn-xs" %>
                              <%= link_to "Delete", category_path(category), method: :delete, data: {confirm: "Are you sure to delete category?"}, class:"btn btn-danger btn-xs"%>
                            </td>
                        </tr>
                      <% end %>
                      </tbody>
                  </table>

              </div>
          </div>
      </div>
  </div>
</div>
